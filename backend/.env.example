# Server Configuration
PORT=5000

# MongoDB Connection String
# For local Docker setup: mongodb://mongo:27017/smart_tourist_db
# For cloud MongoDB: mongodb+srv://<user>:<password>@<cluster-url>/<db-name>
DATABASE_URL=mongodb://mongo:27017/smart_tourist_db

# JWT Secret Key
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=1d

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
CONTRACT_ADDRESS= # Paste deployed DigitalTouristID contract address here
ADMIN_PRIVATE_KEY= # Private key of the admin/owner wallet for the smart contract

# Email Service for Notifications (optional, using Nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=password
EMAIL_FROM="Safety Alert <noreply@example.com>"
